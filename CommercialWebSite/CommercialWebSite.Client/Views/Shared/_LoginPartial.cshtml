@using CommercialWebSite.ShareDTO.Auth
@model LoginRequestModel
@using static System.Diagnostics.Debug;

@{
    string errorMessage = (string)TempData["LoginErrorMessage"];
}

<!-- Login Form Start -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">New message</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="loginFrm" method="post" asp-controller="Auth" asp-action="Login">
                    <div class="mb-3">
                        <label class="col-form-label"
                               asp-for=Username>Username:</label>
                        <input type="text" class="form-control"
                               id="login-name" asp-for=Username>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="col-form-label"
                               asp-for=Password>Password:</label>
                        <input type="password" class="form-control"
                               id="login-password" asp-for=Password>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </form>
                <span class="text-danger">@errorMessage</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="loginFrm">Login</button>
            </div>
        </div>
    </div>
</div>
<!-- Login Form End -->
