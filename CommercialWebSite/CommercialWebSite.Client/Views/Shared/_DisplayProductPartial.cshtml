@using CommercialWebSite.ShareDTO.Business
@model ProductModel

<div class="product-item bg-light mb-4">
    <div class="product-img position-relative overflow-hidden">
        <img class="img-fluid w-100" src="@Model.ProductPicture" alt="">
        <div class="product-action">
            <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-shopping-cart"></i></a>
            <form id="productDetailForm-@(Model.ProductId)" asp-controller="Home" asp-action="ProductDetail">
                <input type="hidden" name="id" value="@Model.ProductId" />
            </form>
            <a class="btn btn-outline-dark btn-square"
               onclick="submitForm('productDetailForm-@(Model.ProductId)')">
                <i class="fa fa-search"></i>
            </a>
        </div>
    </div>
    <div class="text-center py-4">
        <a class="h6 text-decoration-none text-truncate" href="">@Model.ProductName</a>
        <div class="d-flex align-items-center justify-content-center mt-2">
            <h5>$@Model.Price</h5><h6 class="text-muted ml-2"><del>$@Model.Price</del></h6>
        </div>
        <div class="d-flex align-items-center justify-content-center mb-1">
            <small class="fa fa-star text-primary mr-1"></small>
            <small class="fa fa-star text-primary mr-1"></small>
            <small class="fa fa-star text-primary mr-1"></small>
            <small class="fa fa-star text-primary mr-1"></small>
            <small class="fa fa-star text-primary mr-1"></small>
            <small>@Model.NumberInStorage</small>
        </div>
    </div>
</div>
