@using CommercialWebSite.ShareDTO.Auth;
@using CommercialWebSite.ShareDTO;
@model RegisterRequestModel;

<!-- Register Form Start -->
<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Create a new account</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="registerFrm" method="post" asp-controller="Auth" asp-action="Register">
                    <div class="mb-3">
                        <label class="col-form-label"
                               asp-for=Username>Username:</label>
                        <input type="text" class="form-control"
                               id="recipient-name" asp-for=Username>Username>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="col-form-label"
                               asp-for=Password>Password:</label>
                        <input type="text" class="form-control"
                               id="recipient-name" asp-for=Password>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="col-form-label"
                               asp-for=Email>Email:</label>
                        <input type="text" class="form-control"
                               id="recipient-name" asp-for=Email>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="registerFrm">Login</button>
            </div>
        </div>
    </div>
</div>
<!-- Login Form End -->
